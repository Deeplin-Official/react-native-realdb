{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "paths": {
    "@components/*": [
      "src/components/*"
    ],
    "@screens/*": [
      "src/screens/*"
    ],
    "@hooks/*": [
      "src/hooks/*"
    ],
    "@config/*": [
      "src/config/*"
    ],
    "@services/*": [
      "src/services/*"
    ]
  },
  "extends": "expo/tsconfig.base"
}